<Window x:Class="Test_FTP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FTP Test" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="FTP Server:" />
            <TextBox x:Name="ftpServerTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Username:" />
            <TextBox x:Name="usernameTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Password:" />
            <PasswordBox x:Name="passwordBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Remote File Path:" />
            <TextBox x:Name="remoteFilePathTextBox" Width="300" Margin="0,5,0,10"/>

            <TextBlock Text="Local File Path:" />
            <TextBox x:Name="localFilePathTextBox" Width="300" Margin="0,5,0,10"/>

            <Button Content="Download File" Width="150" Margin="0,20,0,0" Click="DownloadFileButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
